{
  "name": "@oas/deset",
  "version": "1.0.0",
  "description": "A powerful CLI tool to automate developer environment setup and comprehensive project health checks",
  "type": "module",
  "main": "./src/index.js",
  "bin": {
    "deset": "./bin/deset"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/openabir/oas-devset#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openabir/oas-devset.git"
  },
  "bugs": {
    "url": "https://github.com/openabir/oas-devset/issues"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "start": "node ./bin/deset",
    "dev": "node ./bin/deset",
    "prepublishOnly": "npm run test && npm run lint",
    "preversion": "npm run test && npm run lint",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "cli",
    "developer-tools",
    "devtools",
    "environment-setup",
    "automation",
    "project-checks",
    "package-management",
    "security-audit",
    "dependency-management",
    "eslint",
    "prettier",
    "husky",
    "oas"
  ],
  "author": {
    "name": "OAS",
    "email": "contact@oas.dev",
    "url": "https://github.com/openabir"
  },
  "license": "MIT",
  "dependencies": {
    "@eslint/js": "^9.34.0",
    "chalk": "^5.3.0",
    "commander": "^14.0.0",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.1.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.1.2",
    "lint-staged": "^16.1.5",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "maxWorkers": "50%",
    "cache": true,
    "globals": {
      "__DEV__": true
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(chalk|@jest)/)"
    ],
    "moduleFileExtensions": [
      "js",
      "mjs",
      "cjs",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [],
    "testTimeout": 8000,
    "verbose": false,
    "silent": true
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
